# Credenciales de Telegram
# Obtén tu token de @BotFather en Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Tu ID de usuario de Telegram (obténlo hablando con @userinfobot)
TELEGRAM_TEST_USER_ID=987654321

# Credenciales de MongoDB (opcional, solo si usas MongoDB como fuente de datos)
# Reemplaza con tu URI de MongoDB Atlas o servidor local
MONGO_URI=mongodb+srv://usuario:contraseña@tu_cluster.mongodb.net/?retryWrites=true&w=majority

# Configuración de la base de datos MongoDB (opcional)
DB_NAME=DB_NAME
COLLECTION_NAME=COLLECTION_NAME
ID_FIELD=id

# Configuración de archivos
# Ruta del archivo JSON con IDs de usuario (si usas JSON como fuente)
JSON_PATH=users.json

# Rutas de las imágenes
# Asegúrate de que las imágenes existan en estas rutas
IMAGE_1_PATH=imagen1.jpg
IMAGE_2_PATH=imagen2.jpg
IMAGE_3_PATH=imagen3.jpg

# Número de imágenes a enviar (0-3)
# 0 = Sin imágenes, solo texto
# 1-3 = Número de imágenes a incluir
NUM_IMAGES=3

# Configuración de envío
# Delay entre mensajes en segundos (para evitar rate limits)
MESSAGE_DELAY=1.5 